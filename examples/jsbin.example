body
  font-family "Lato"
  padding 0
  margin 0

#content
  display flex
  flex-direction column
  width 100%
  height 100%
  background #363745

.info
  flex 0 0 content
  height 3em
  background #405C87
  text-align center
  color rgba(0,0,0, .5)
  font-weight 600
.log
  flex 1 1 auto
  color #eee
  .entry
    padding 1em
.input
  flex 0 0 content
  height 3em
  background #4D4D61
  display flex
  align-items center
  input
    padding 1em
    font-size 1em
    flex 1 1 auto
    border none
    background none
    color #fff