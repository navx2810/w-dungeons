body
  font-family "Montserrat"
  color #eee
  padding 0
  margin 0
#content
  border .5em solid #444
  width 100%
  height 100%
  display flex
  flex-direction column
  padding .3em
  background #323232
  box-sizing border-box

.top
  flex 0 0 content
  display flex
  background rgb(37, 42, 47)
  color rgb(199, 200, 201)
  flex-direction row
  justify-content space-around
  align-items center
  div:hover
    background rgb(48, 54, 58)
  div
    flex 1 1 auto
    display flex
    justify-content center
    align-items center
    cursor pointer    
    p
      flex 0 0 content
      font-weight 800
      border-bottom 2px solid rgb(20, 150, 200)
      color rgb(20, 150, 200)
      text-align center

.log
  flex 1 1 auto
  background rgb(44, 49, 56)
  display flex
  flex-direction column
  overflow-y scroll

.entry
  display flex
  padding 0 .5em
  align-items center
  .date
    flex 0 0 content
    display flex
    flex-direction column
    align-items center
    justify-content center
    /* color rgba(2,3,4, .5) */
    color #999
    p
      flex 0 0 content
      white-space nowrap
      padding 0
      margin 0
  .content
    flex 1 1 auto
    p
      padding 0 1em
  .options
    display flex
    color rgb(20, 150, 200)
    flex-direction column
    justify-content center
    align-items center
    p
      cursor pointer
      flex 0 0 content
      margin 0
      padding 0

.info
  display flex
  flex 0 0 content
  height 4em
  background rgb(87, 91, 142)
  color rgba(1, 2, 3, .4)
  font-weight 600
  align-items center
  padding 0 1em
  .left
    flex 1 1 auto
    display flex
    flex-direction column
    justify-content center
    align-items center
    p
      flex 1 1 content
      margin 0
      padding 0
  .right
    flex 0 0 content
    font-weight 800
    p
      cursor pointer


.input
  flex 0 0 content
  background rgb(62, 66, 73)
  height 4em
  display flex
  input
    font-family "Montserrat"
    flex 1 1 auto
    border none
    background none
    padding 1em
    color #fff